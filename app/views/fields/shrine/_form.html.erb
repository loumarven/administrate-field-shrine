<div class="field-unit__label">
  <%= f.label field.attribute %>
</div>
<div class="field-unit__field">
  <% if field.multiple? -%>
    <%= f.file_field field.attribute, class: "uplaod-file", multiple: true, accept: field.allowed_types %>
  <% else -%>
    <%# show image (or file thumbnail?) if available %>
    <%= image_tag field.url if field.url.present? || field.cached_value %>
    <%= f.hidden_field field.attribute, value: field.cached_value %>
    <%= f.file_field field.attribute, accept: field.allowed_types %>
  <% end -%>
</div>
